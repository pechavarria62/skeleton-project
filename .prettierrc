{
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 70,
          "useTabs": false,
          "trailingComma": "none",
          "arrowParens": "avoid",
          "proseWrap": "never"
        }
      },
      {
        "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
        "options": {
          "useTabs": false
        }
      }
    ]
  }